<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="AnswerAct"
            type="com.kurume_nct.studybattle.viewModel.AnswerViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:background="@color/md_cyan_500"
                    android:gravity="center"
                    android:text="解答閲覧"
                    android:textColor="@color/md_dark_primary_text"
                    android:textSize="24sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView26"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@{AnswerAct.problemName}"
                        android:textColor="@color/material_drawer_dark_selected"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/textView34"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@{AnswerAct.masterName}"
                        android:textColor="?android:attr/textColorHintInverse"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/problem_score_ans_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@{AnswerAct.problemScore}"
                        android:textColor="@color/material_drawer_dark_selected"
                        android:textSize="18sp" />
                </LinearLayout>

                <ImageButton
                    android:id="@+id/problem_image_at_answer"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginBottom="32dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/md_blue_grey_200"
                    android:scaleType="centerCrop"
                    android:onClick="@{AnswerAct.onClickProblemImage}"
                    app:AnswerImageLoad="@{AnswerAct.problemUri}" />

                <TextView
                    android:id="@+id/textView28"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:paddingBottom="4dp"
                    android:text="想定解"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="21sp" />

                <ImageButton
                    android:id="@+id/answer_image_at_answer"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginBottom="32dp"
                    android:background="@color/md_blue_grey_200"
                    android:scaleType="centerCrop"
                    android:onClick="@{AnswerAct.onClickAnswerImage}"
                    app:AnswerImageLoad="@{AnswerAct.answerUri}" />


                <TextView
                    android:id="@+id/textView29"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="全員の解答"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="21sp" />

                <LinearLayout
                    android:id="@+id/answers_fragment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />

            </LinearLayout>
        </ScrollView>

    </LinearLayout>
</layout>