<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="GroupSetView"
            type="com.kurume_nct.studybattle.viewModel.GroupSetChangeViewModel" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.kurume_nct.studybattle.view.GroupSetChangeActivity">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="グループ設定画面"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/textView40"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="グループ名" />

                <TextView
                    android:id="@+id/textView39"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="このグループに誰かを招待" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView15"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="right|center"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/upicon1" />

                    <EditText
                        android:id="@+id/editText7"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="10"
                        android:hint="検索したい名前を入力して下さい"
                        android:inputType="textPersonName"
                        android:text="@{GroupSetView.searchEditText}" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/fragment_search_list"
                    android:layout_width="320dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:orientation="vertical" />

                <LinearLayout
                    android:id="@+id/fragment_select_list"
                    android:layout_width="322dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:orientation="vertical" />

                <Button
                    android:id="@+id/button8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="@{GroupSetView.onClickChangeInfo}"
                    android:text="情報を更新" />

                <Button
                    android:id="@+id/button9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="@{GroupSetView.onClickGoodbyeInfo}"
                    android:text="このグループから退出" />

            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</layout>