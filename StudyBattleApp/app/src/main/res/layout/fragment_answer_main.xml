<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipe_refresh_fragment_answer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ScrollView
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:scrollbarStyle="outsideOverlay"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="33dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:background="@color/md_red_200"
                    android:gravity="center_vertical"
                    android:paddingLeft="16dp"
                    android:text="採点中の問題"
                    android:textColor="@color/md_dark_primary_text"
                    android:textSize="21sp" />

                <LinearLayout
                    android:id="@+id/fragment_list_ans_yet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:orientation="vertical">

                </LinearLayout>

                <TextView
                    android:id="@+id/textView3_"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:background="@color/md_blue_300"
                    android:gravity="center_vertical"
                    android:paddingLeft="16dp"
                    android:text="過去の問題"
                    android:textColor="@color/md_dark_primary_text"
                    android:textSize="21sp" />

                <LinearLayout
                    android:id="@+id/fragment_list_ans_fin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:orientation="vertical">

                </LinearLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_weight="1" />

            </LinearLayout>
        </ScrollView>

    </android.support.v4.widget.SwipeRefreshLayout>
</layout>