<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipe_refresh_fragment_made"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbarStyle="outsideOverlay"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="33dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:background="@color/md_light_green_400"
                    android:gravity="center_vertical"
                    android:paddingLeft="16dp"
                    android:text="解答収集中の自作の問題"
                    android:textColor="@color/md_dark_primary_text"
                    android:textSize="21sp" />

                <LinearLayout
                    android:id="@+id/fragment_list_made_collect_yet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:orientation="vertical">

                </LinearLayout>

                <TextView
                    android:id="@+id/textView3_po"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:background="@color/md_red_200"
                    android:gravity="center_vertical"
                    android:paddingLeft="16dp"
                    android:text="最終の答え合わせがまだの問題"
                    android:textColor="@color/md_dark_primary_text"
                    android:textSize="21sp" />

                <LinearLayout
                    android:id="@+id/fragment_list_made_final_yet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:orientation="vertical" />

                <TextView
                    android:id="@+id/textView3_"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:background="@color/md_orange_300"
                    android:gravity="center_vertical"
                    android:paddingLeft="16dp"
                    android:text="最初の答え合わせがまだの問題"
                    android:textColor="@color/md_dark_primary_text"
                    android:textSize="21sp" />

                <LinearLayout
                    android:id="@+id/fragment_list_made_yet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:orientation="vertical" />

                <TextView
                    android:id="@+id/textView3__"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:background="@color/md_blue_400"
                    android:gravity="center_vertical"
                    android:paddingLeft="16dp"
                    android:text="過去に作った問題"
                    android:textColor="@color/md_dark_primary_text"
                    android:textSize="21sp" />

                <LinearLayout
                    android:id="@+id/fragment_list_made_fin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:orientation="vertical" />


                <Space
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_weight="1" />

            </LinearLayout>
        </ScrollView>

    </android.support.v4.widget.SwipeRefreshLayout>
</layout>
